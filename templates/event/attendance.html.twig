{% extends 'crud/index.html.twig' %}

{% block title %}Gestion des présences - {{ event.name }}{% endblock %}

{% block crud_title %}
<div class="flex justify-between items-center">
    <h1 class="text-2xl font-semibold text-gray-900">
        Présences - {{ event.name }}
        <span class="text-sm text-gray-500 block">
            {% set scope_display = {
                'general': 'Portée générale',
                'sector': event.targetSector ? 'Secteur : ' ~ event.targetSector.name : (event.sector ? 'Secteur : ' ~ event.sector.name : 'Secteur non spécifié'),
                'church': event.targetChurch ? 'Église : ' ~ event.targetChurch.name : 'Église non spécifiée'
            } %}
            {{ scope_display[event.scope]|default('Non définie') }}
        </span>
    </h1>
</div>
{% endblock %}

{% block crud_actions %}
    <a href="{{ path('app_event_show', {'id': event.id}) }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
        Retour aux détails
    </a>
{% endblock %}

{% block crud_content %}
    {# Statistics Section #}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Statistiques</h3>
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
                <div class="bg-gray-50 overflow-hidden rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total des participants</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900">
                                {{ attendances|filter(a => a.isPresent)|length }} / {{ attendances|length }}
                            </dd>
                        </dl>
                    </div>
                </div>
                
                <div class="bg-gray-50 overflow-hidden rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <dt class="text-sm font-medium text-gray-500 mb-2">Répartition par église</dt>
                        <div class="space-y-2">
                            {% set churchStats = {} %}
                            {% for attendance in attendances|filter(a => a.isPresent) %}
                                {% set church = attendance.youth.church %}
                                {% set churchName = church ? church.name : 'Sans église' %}
                                {% set churchStats = churchStats|merge({
                                    (churchName): (churchStats[churchName] ?? 0) + 1
                                }) %}
                            {% endfor %}
                            
                            {% for churchName, count in churchStats %}
                                <div class="flex justify-between items-center text-sm">
                                    <span class="text-gray-600">{{ churchName }}</span>
                                    <span class="font-medium text-gray-900">{{ count }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post" class="space-y-8">
        {# Additional Youths Section #}
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Ajouter des jeunes supplémentaires</h3>
                <p class="mt-1 text-sm text-gray-500">Sélectionnez des jeunes à ajouter à cet événement.</p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
                {% if grouped_youths|length > 0 %}
                    <div class="space-y-8">
                        {% for sector_id, sector in grouped_youths %}
                            <div class="space-y-4">
                                <h4 class="font-medium text-lg text-gray-900">{{ sector.name }}</h4>
                                {% for church_id, church in sector.churches %}
                                    <div class="ml-4 space-y-2">
                                        <h5 class="font-medium text-gray-700">{{ church.name }}</h5>
                                        <div class="ml-4 grid grid-cols-1 gap-2 sm:grid-cols-2 md:grid-cols-3">
                                            {% for youth in church.youths %}
                                                <div class="flex items-center">
                                                    <input type="checkbox" 
                                                           name="additional_youths[]" 
                                                           value="{{ youth.id }}"
                                                           class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                                                    <label class="ml-2 text-sm text-gray-700">
                                                        {{ youth.lastName }} {{ youth.firstName }}
                                                    </label>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 text-sm">Aucun jeune supplémentaire disponible.</p>
                {% endif %}
            </div>
        </div>

        {% for church in churches %}
            {% if church %}
                <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                    <div class="px-4 py-5 sm:px-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">{{ church.name }}</h3>
                    </div>
                    <div class="border-t border-gray-200 overflow-x-auto">
                        <div class="min-w-full divide-y divide-gray-200">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Présent</th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Commentaire</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for youth in church.youths %}
                                        {% set attendance = attendances[youth.id] ?? null %}
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                                {{ youth.firstName }} {{ youth.lastName }}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <label class="relative inline-flex items-center cursor-pointer">
                                                    <input type="checkbox" 
                                                           name="attendance[{{ youth.id }}][isPresent]" 
                                                           {% if attendance and attendance.isPresent %}checked{% endif %}
                                                           class="sr-only peer">
                                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                                                    <span class="ml-2 text-sm font-medium text-gray-900 hidden">Présent</span>
                                                </label>
                                            </td>
                                            <td class="px-6 py-4">
                                                <input type="text" 
                                                       name="attendance[{{ youth.id }}][comment]" 
                                                       value="{{ attendance ? attendance.comment : '' }}"
                                                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                                                       placeholder="Commentaire">
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                                Aucun jeune dans cette église
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        <div class="flex justify-end px-4 sm:px-0">
            <button type="submit" class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Enregistrer les présences
            </button>
        </div>
    </form>
{% endblock %}